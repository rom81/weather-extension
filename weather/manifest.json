{
  "name": "Weather Overlays",
  "description": "Makes it snow, rain, shine, and fog yoour screen based on the weather outside!",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Fun effects",
      "default_icon": "cloud.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["snowstorm.js"]
    }
  ],
  "manifest_version": 2
}
